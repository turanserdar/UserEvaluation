                    <div class="signup-form">
                        <h2 class="form-title">Sign in</h2>


                        <form class="user" asp-controller="auth" asp-action="Register" method="post" asp-antiforgery="true">


                            <div class="text-danger"></div>
                            <div class="form-group">
                                @*<label asp-for="Firstname" class="control-label"></label>*@
                                <input asp-for="Firstname" type="text" class="form-control form-control-user" placeholder="First Name">
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @*<label asp-for="Lastname" class="control-label"></label>*@
                                <input asp-for="Lastname" type="text" class="form-control form-control-user" placeholder="Last Name">
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                @*<label asp-for="Email" class="control-label"></label>*@
                                <input asp-for="Email" type="email" class="form-control form-control-user" placeholder="Email Address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                @*<label asp-for="Email" class="control-label"></label>*@
                                <input asp-for="Phone" type="Phone" class="form-control form-control-user" placeholder="Telephone Number">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                @*<label asp-for="Password" class="control-label"></label>*@
                                <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @*<label asp-for="PasswordConfirm" class="control-label"></label>*@
                                <input asp-for="PasswordConfirm" type="password" class="form-control form-control-user" placeholder="Repeat Password">
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                @*<label asp-for="BirthDate" class="control-label"></label>*@
                                @*<label asp-for="BirthDate" class="control-label"></label>*@
                                <input asp-for="BirthDate" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>

                            <br />
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success text-center">Create an Accont!</button>
                            </div>


                        </form>



